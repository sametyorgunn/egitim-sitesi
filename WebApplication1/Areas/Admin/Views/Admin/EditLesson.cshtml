@using EntityLayer.Concrete
@model Lesson
@{
    ViewData["Title"] = "EditLesson";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br /><br />
@using (Html.BeginForm("EditLesson","Admin",FormMethod.Post, new 
                                       { enctype = "multipart/form-data" }))
{
    
    @Html.Label("Ders id")
    @Html.TextBoxFor(x=>x.Lesson_id, new {@class="form-control", @readonly="readonly"})
   
    @Html.Label("Ders Adı")
    @Html.TextBoxFor(x=>x.Lesson_name, new {@class="form-control"})


    @Html.Label("Ders görseli")
    @Html.TextBoxFor(x=>x.Lesson_resim,new{@type="file"})
    <br />
    @Html.Label("Ders Sınıfı")
    @Html.DropDownListFor(x => x.SiniflarSinif_id,(List<SelectListItem>)ViewBag.v, new { @class = "form-control"})


    <button type="submit" class="btn btn-primary">Güncelle</button>
}