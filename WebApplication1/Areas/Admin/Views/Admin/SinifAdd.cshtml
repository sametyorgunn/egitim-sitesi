@using EntityLayer.Concrete
@model Siniflar
@{
    ViewData["Title"] = "SinifAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Sinif Ekleme</h3>


@using (Html.BeginForm("SinifAdd", "Admin", FormMethod.Post, new 
                                       { enctype = "multipart/form-data" }))
{
    @Html.Label("Sinif Seviyesi")
    @Html.TextBoxFor(x=>x.Sinif_name, new { @class="form-control"})
    @Html.ValidationMessageFor(x=>x.Sinif_name)
    <br />

    <button class="btn btn-info">Sınıfı Kaydet</button>
}


@await Component.InvokeAsync("Siniflar")