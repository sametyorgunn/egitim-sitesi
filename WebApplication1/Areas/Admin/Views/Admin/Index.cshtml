@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Toplam Ders Sayısı</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.ders</h1>
                    <div class="stat-percent font-bold text-success"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Toplam Ders İçeriği sayısı</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.icerik</h1>
                    <div class="stat-percent font-bold text-info"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Üye Sayısı</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.uye</h1>
                    <div class="stat-percent font-bold text-navy"></div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="ibox ">
                <div class="ibox-title">
                    <h5>Admin Kullanıcı Adı</h5>
                </div>
                <div class="ibox-content">
                    <h1 class="no-margins">@ViewBag.admn</h1>
                    <div class="stat-percent font-bold text-danger"></div>
                </div>
            </div>
        </div>
    </div>
  @await Component.InvokeAsync("GetUserInfo")

    
</div>
