@using EntityLayer.Concrete
@model List<Lesson>
@{
    ViewData["Title"] = "DersListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Ders Adı</th>
      <th scope="col">Düzenle</th>
      <th scope="col">Sil</th>
    
    </tr>
  </thead>
  <tbody>
      @foreach(var i in Model)
      {
    <tr>
      <th scope="row">@i.Lesson_id</th>
      <td>@i.Lesson_name</td>
      <td><a href="/Admin/Admin/EditLesson/@i.Lesson_id" class="btn btn-warning">Düzenle</a></td>
      <td><a href="/Admin/Admin/DeleteLesson/@i.Lesson_id" class="btn btn-danger">Sil</a></td>
    </tr>
      }
  </tbody>
</table>