@using EntityLayer.Concrete
@*@model List<Lesson>*@
@using X.PagedList.Mvc.Core
@using X.PagedList
@model IPagedList<EntityLayer.Concrete.Lesson>

    
@{
    ViewData["Title"] = "DersListele";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
</head>
<br />
<table class="table">
  <thead>
    <tr>
      <th hidden scope="col">#</th>
      <th scope="col">Ders Adı</th>
      <th scope="col">Durumu</th>
      <th scope="col">Düzenle</th>
      <th scope="col">Sil</th>
      <th scope="col">Pasif Yap</th>
      <th scope="col">Aktif Yap</th>
    </tr>
  </thead>
  <tbody>
      @foreach(var i in Model)
      {
    <tr>
      <th hidden scope="row">@i.Lesson_id</th>
      <td>@i.Lesson_name</td>
      <td>@i.durum</td>
      <td><a href="/Admin/Admin/EditLesson/@i.Lesson_id" class="btn btn-warning">Düzenle</a></td>
      <td><a href="/Admin/Admin/DeleteLesson/@i.Lesson_id" class="btn btn-danger">Sil</a></td>
      <td><a href="/Admin/Admin/PasifYap/@i.Lesson_id" class="btn btn-danger">Pasif Yap</a></td>
      <td><a href="/Admin/Admin/AktifYap/@i.Lesson_id" class="btn btn-success">Aktif Yap</a></td>

    </tr>
      }
  </tbody>
</table>
<br /><br />
@Html.PagedListPager((IPagedList)Model,page=>Url.Action("DersListele",new{page}))


