@using egitim_proje.Models
@model RoleUpdateViewModel
@{
    ViewData["Title"] = "UpdateRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<h1>UpdateRole</h1>

<form method="post">
    <div class="form-group">
        <label>Rol Id</label>
        <input name="Id" type="text" value="@Model.Id" class="form-control" />
    </div>

    <div class="form-group">
        <label>Rol başlığı</label>
        <input name="name" type="text" value="@Model.name" class="form-control" />
    </div>
    <button class="btn btn-info">Güncelle</button>
</form>

