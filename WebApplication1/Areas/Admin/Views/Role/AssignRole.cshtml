@using egitim_proje.Areas.Admin.Models
@model List<RoleAssignViewModel>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].name" />
            <input type="checkbox" asp-for="@Model[i].exists" class="form-check-input" />
            <label class="form-check-label" for="@Model[i].exists">@Model[i].name</label>
        </div>
    }
    <button class="btn btn-info">Değişiklikleri kaydet</button>

</form>
<br />
<a href="/Admin/Role/RoleList/" class="btn btn-primary">Kullanıcı listesine Dön</a>

