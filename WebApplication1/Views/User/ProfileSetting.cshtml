@using EntityLayer.Concrete
@model UserUpdateViewModel
@{
    ViewData["Title"] = "ProfileSetting";
    Layout = "~/Views/Shared/UserProfileLayout.cshtml";
}

<h4>Profil Ayarları</h4>

    <form class="form-inline" method="post">
        
         <div class="form-group mx-sm-3 mb-2">
            <label for="inputPassword2" class="sr-only">Ad Soyad</label>
            <input type="text" asp-for="@Model.namesurname" class="form-control" id="inputPassword2" placeholder="Adı soyadı" value="@Model.namesurname" readonly>
        </div>
