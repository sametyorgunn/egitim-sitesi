            <input type="text" asp-for="@Model.sube" class="form-control" id="inputPassword2" placeholder="Şube" value="@Model.sube" readonly>
        </div>
         <div class="form-group mx-sm-3 mb-2">
            <label for="inputPassword2" class="sr-only">Okul No</label>
