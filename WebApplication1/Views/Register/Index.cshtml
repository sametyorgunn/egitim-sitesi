@using EntityLayer.Concrete
@model UserSıgnUpModel
@{
    Layout = "/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>Kayıt Sayfası</title>

    <link href="~/inspinia-gh-pages/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/font-awesome/css/font-awesome.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/plugins/iCheck/custom.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/animate.css" rel="stylesheet">
    <link href="~/inspinia-gh-pages/css/style.css" rel="stylesheet">

</head>
            <h3>Kayıt Ekranı</h3>
           
            <p>Yeni bir hesap oluşturun</p>
         
            <form class="m-t" role="form" asp-action="Index">
                <div class="form-group">
                    <span asp-validation-for="@Model.namesurname" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.namesurname" placeholder="İsim Soyisim" required >
                </div>

               @* <div class="form-group">
                    <span asp-validation-for="@Model.mail" class="text-danger"></span>
                    <input type="email" class="form-control" asp-for="@Model.mail" placeholder="Mail" >
                </div>*@

                <div class="form-group">
                    <span asp-validation-for="@Model.username" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.username" placeholder="kullanıcı adı" required  >
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.password" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.password" placeholder="Şifre" required>
                </div>

                <div class="form-group">
                    <span asp-validation-for="@Model.confirmpassword" class="text-danger"></span>
                    <input type="password" class="form-control" asp-for="@Model.confirmpassword" placeholder="Şifre Tekrar" required>
                </div>
                 <div class="form-group">
                    <span asp-validation-for="@Model.sube" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.sube" placeholder="şube giriniz" required>
                </div>
                  <div class="form-group">
                    <span asp-validation-for="@Model.okul_no" class="text-danger"></span>
                    <input type="text" class="form-control" asp-for="@Model.okul_no" placeholder="okul no giriniz" required>
                </div>
                 <div class="form-group">
                      @Html.Label("Sınıf")
                      @Html.DropDownList("SiniflarSinif_id", new SelectList(ViewBag.Siniflars, "Sinif_id", "Sinif_name"))
                </div> 
                <button type="submit" class="btn btn-primary block full-width m-b">Kayıt</button> 
                <div class="text-danger" asp-validation-summary="ModelOnly">
                </div>
            </form>
</html>
