@using EntityLayer.Concrete
@model List<Header>

<h1>Header Detay</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Başlık</th>
      <th scope="col">İçerik</th>
      <th scope="col">Düzenle</th>
      <th scope="col">Sil</th>
    
    </tr>
  </thead>
  <tbody>
     @foreach(var i in Model)
        { 
    <tr>
      <th scope="row">@i.Header_id</th>
      <td>@i.Header_baslik</td>
      <td>@i.Header_icerik</td>
      <td><a href="/Admin/Anasayfa/HeaderGuncelle/@i.Header_id" class="btn btn-warning">Düzenle</a></td>
      <td><a href="/Admin/Anasayfa/HeaderDelete/@i.Header_id" class="btn btn-danger">Sil</a></td>
    </tr>
        }
  </tbody>
</table>
